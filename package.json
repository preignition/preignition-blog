{
  "name": "@preignition/preignition-blog",
  "version": "0.10.0",
  "description": "Webcomponent preignition-blog following open-wc recommendations for building a blog app",
  "author": {
    "name": "christophe geiser",
    "email": "christophe@preignition.org"
  },
  "license": "MIT",
  "__type": "module",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "snowpack": "pnpx snowpack -i",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start --update-snapshots",
    "test:prune-snapshots": "karma start --prune-snapshots",
    "test:bs": "karma start karma.bs.config.js --coverage",
    "generate-docs-md": "wca analyze src/**.js --outFiles docs/{tagname}.md ",
    "generate-docs-json": "wca analyze src/**.js --outFiles docs/{tagname}.json ",
    "generate-docs": "npm run generate-docs-md && npm run generate-docs-json",
    "prepublishOnly": "npm generate-docs"
  },
  "dependencies": {
    "@lit-element-bootstrap/breadcrumb": "^1.0.1",
    "@material/mwc-base": "^0.21.0",
    "@material/mwc-fab": "^0.21.0",
    "@material/mwc-icon": "^0.21.0",
    "@material/mwc-ripple": "^0.21.0",
    "@preignition/lit-firebase": "link:../lit-firebase",
    "@preignition/preignition-config": "link:../preignition-config",
    "@preignition/preignition-mixin": "^1.9.1",
    "@preignition/preignition-router": "link:../preignition-router",
    "@preignition/preignition-state": "link:../preignition-state",
    "@preignition/preignition-util": "link:../preignition-util",
    "dompurify": "^2.2.9",
    "lit-element": "^2.4.0",
    "lit-element-state": "^1.7.0",
    "lit-html": "^1.3.0",
    "lit-translate": "^1.2.1",
    "local-time": "^2.1.0",
    "marked": "^2.1.3",
    "prettier": "^2.0.5",
    "pwa-helpers": "^0.9.1",
    "router-slot": "^1.5.4"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.16",
    "@open-wc/testing-karma": "^3.3.19",
    "@open-wc/testing-karma-bs": "^1.3.62",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.48.1",
    "eslint": "^7.0.0",
    "firebase": "^8.6.8",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "materialize-css": "^1.0.0",
    "tslib": "^2.3.0",
    "vite": "^2.3.8"
  },
  "snowpack": {
    "webDependencies": [
      "@lit-element-bootstrap/breadcrumb",
      "@material/mwc-fab",
      "@material/mwc-icon",
      "@morbidick/lit-element-notify",
      "@preignition/preignition-mixin",
      "@preignition/preignition-util",
      "@preignition/lit-firebase",
      "pwa-helpers/media-query.js",
      "marked",
      "marked/lib/marked.esm.js",
      "dompurify",
      "lit-element",
      "lit-html",
      "lit-html/directives/cache.js",
      "lit-html/directives/unsafe-html.js",
      "lit-html/directives/style-map.js"
    ],
    "dedupe": [
      "lit-html",
      "lit-element",
      "dompurify",
      "@material/mwc-base",
      "@material/mwc-icon",
      "@material/mwc-ripple",
      "@preignition/lit-firebase",
      "@preignition/preignition-mixin",
      "@preignition/preignition-util"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
